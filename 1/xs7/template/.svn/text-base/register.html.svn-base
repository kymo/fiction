{% extends "base.html" %}

{% block title %}
注册启书帐号
{% endblock %}

{% block css %}
<style>

#member_page
{
    border-top:2px solid #8b6f4f;
}
#member_page a
{
    color:#8b6f4f;
}
</style>
{% endblock %}

{% block main %}
        <div class="row">
   <h2 style='color:#1e8d19;'> > {{ tips }} </h2>
<div class="clearfix">
        <form id = 'reg-form' action='/register/' method = 'POST' class="form-horizontal user_form">
          {% csrf_token %}
          <fieldset>
            <legend>注册</legend>
            <div class="control-group">
                
              <label class="control-label" for="input01">名称:</label>
              <div class="controls">
                <input type="text" class="input-large" name = 'name' id="input01"><span style='margin-left:10px;display:none;' id = 'input01-tip'>可用</span>
              </div>
            </div>
            <div class="control-group">
              <label class="control-label" for="input01">密码:</label>
              <div class="controls">
                <input type="password" class="input-large" name = 'password' id="input02"> <span style='display:none;' id = 'input02-tip'>可用</span>       
              </div>
            </div>
            <div class="control-group">
              <label class="control-label" for="input01">确定密码:</label>
              <div class="controls">
                <input type="password" class="input-large" id="input03">        <span style='display:none;' id = 'input03-tip'>可用</span>
              </div>
            </div>
            <div class="control-group">
              <label class="control-label" for="input01">邮箱:</label>
              <div class="controls">
                <input type="text" class="input-large" name='email'>   <span style='display:none;' id = 'input04-tip'>可用</span>     
              </div>
            </div>
            <div class="control-group">
              <label class="control-label" for="input01">验证码:</label>
              <div class="controls">
                <input type="text" class="input-small" name = 'validate' >    <img src = '/validate/'>   
              </div>
            </div>

            <div class="control-group" style='*margin-left:160px;'>
            <label class="l-label" for="optionsCheckbox"></label>
            <div class="controls">
              <label class = 'checkbox' id='input04'>
                <input type = 'checkbox' id='input_ok' name = 'is_ok''>
                我同意<a href = 'javascript:void(0);' data-toggle='modal' data-target='#myModal' alt='点击阅读' title='点击阅读'>《注册协议》</a>
             </label>
              <label class="checkbox">
                <input type="checkbox" name='remember' id="optionsCheckboxs">          
                记住我
                <a href="#">忘记密码</a>
              </label>
            </div>
          </div>
          <div class="control-group">
            <div class="controls">
              <a type ='submit' href="#" id = 'submit-button' class="btn btn btn-success">注册</a>
            <span style = '{% if not error_msg %} display:none; {% endif %}color:red;' id= 'show_alert'>
             {% if error_msg %}
             验证码输入出错
            {% else %}
                请将资料填写完整
             {% endif %}
            </span></div>
          </div>
          </fieldset>
        </form>
        <div class="user_tips">
          <p>已拥有账户吗？</p>
          <p><a href="/login/">从这里登录！</a></p>
          <div class="site">
          <p>相关链接</p>
          <p><a href = 'http://www.xs7.com'>www.xs7.com</a></p>
          </div>
        </div>
      </div>
        </div>
